<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PatientMedicalFile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="HeaderText">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/snow_white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">70</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:shadowColor">#a2050505</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:fontFamily">@font/aharoni</item>
        <item name="android:letterSpacing">0.3</item>
    </style>


    <style name="HeaderText2">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/snow_white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">70</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:shadowColor">#a2050505</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:fontFamily">@font/aharoni</item>
        <item name="android:letterSpacing">0.3</item>
    </style>
    <style name="HeaderText3">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/snow_white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">70</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:shadowColor">#a2050505</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:fontFamily">@font/aharoni</item>
        <item name="android:letterSpacing">0.3</item>
    </style>

</resources>